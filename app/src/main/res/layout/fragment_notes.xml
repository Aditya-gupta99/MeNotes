<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.NotesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/splash_v2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_v2"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="60sp"
            android:background="@drawable/rectangle_1"
            android:elevation="25dp"
            android:backgroundTint="@color/white"
            app:cardElevation="30sp"
            app:cardCornerRadius="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:src="@drawable/search_icon"
                    android:layout_margin="17.5sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_text"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="600sp"
            android:layout_height="600sp"
            android:background="@drawable/square_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500sp"
            android:rotation="45"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>